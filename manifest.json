{
  "manifest_version": 3,
  "name": "FreeFlow Music",
  "version": "1.0",
  "description": "Reproduce m√∫sica gratis mientras navegas",
  "permissions": [
    "storage",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "https://api.jamendo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}